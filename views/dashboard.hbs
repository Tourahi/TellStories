<h6>dashboard</h6>
<h3>Welcome {{name}}</h3>
{{#if stories}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        {{#each stories}}
          <tr>
            <td> <a href="/stories/{{_id}}">{{title}}</a></td>
            <td>{{createdAt}}</td>
            <td> <span class="dash-status">{{status}}</span> </td>
            <td></td>
          </tr>
        {{/each}}
      </tr>
    </tbody>
  </table>
{{else}}
  <p>You have no stories yet.</p>
{{/if}}
